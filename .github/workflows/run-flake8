name: Check Coding Style with flake8

on:
  pull_request:
    paths:
      - '**/*.py'

jobs:
  flake8:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: 3.11  # Choose the Python version you need

      - name: Install dependencies
        run: pip install flake8

      - name: Run flake8 on code changes
        run: |
          git diff --name-only ${{ github.event.before }} ${{ github.event.after }} | xargs flake8
